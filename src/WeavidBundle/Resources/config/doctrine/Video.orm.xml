<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="WeavidBundle\Entity\Video" table="video">
    <indexes>
      <index name="OWNER_ID_IDX" columns="owner_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="title" type="string" column="title" length="255" nullable="false">
      <options>
        <option name="fixed">1</option>
      </options>
    </field>
    <field name="description" type="text" column="description" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="released" type="boolean" column="released" nullable="false">
      <options>
        <option name="default">1</option>
      </options>
    </field>
    <field name="public" type="boolean" column="public" nullable="false">
      <options>
        <option name="default">1</option>
      </options>
    </field>
    <field name="primaryVideoUrl" type="string" column="primary_video_url" length="255" nullable="false">
      <options>
        <option name="fixed">1</option>
      </options>
    </field>
    <field name="secondaryVideoUrl" type="string" column="secondary_video_url" length="255" nullable="true">
      <options>
        <option name="fixed">1</option>
      </options>
    </field>
    <field name="subtitle" type="string" column="subtitle" length="255" nullable="true">
      <options>
        <option name="fixed">1</option>
        <option name="comment">Subtitle in URL anpassen</option>
      </options>
    </field>
    <field name="createdAt" type="datetime" column="created_at" nullable="true"/>
    <field name="updatedAt" type="datetime" column="updated_at" nullable="true"/>
    <many-to-one field="owner" target-entity="User" fetch="LAZY" inversed-by="videos">
      <join-columns>
        <join-column name="owner_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="playlist" target-entity="Playlist" mapped-by="video" fetch="LAZY"/>
    <many-to-many field="category" target-entity="Category" inversed-by="video" fetch="LAZY">
      <join-table name="video_categories">
        <join-columns>
          <join-column name="video_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="category_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="lecturer" target-entity="Lecturer" inversed-by="video" fetch="LAZY">
      <join-table name="video_lecturers">
        <join-columns>
          <join-column name="video_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="lecturer_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="tag" target-entity="Tag" inversed-by="video" fetch="LAZY">
      <join-table name="video_tags">
        <join-columns>
          <join-column name="video_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="tag_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <one-to-many target-entity="Comment" mapped-by="video" field="comment"/>
  </entity>
</doctrine-mapping>
