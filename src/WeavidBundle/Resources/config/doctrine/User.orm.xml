<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="WeavidBundle\Entity\User" table="user">
    <unique-constraints>
      <unique-constraint name="EMAIL" columns="email"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="email" type="string" column="email" length="120" nullable="false">
      <options>
        <option name="fixed">1</option>
      </options>
    </field>
    <field name="password" type="string" column="password" length="255" nullable="true">
      <options>
        <option name="fixed">1</option>
      </options>
    </field>
    <field name="firstName" type="string" column="first_name" length="255" nullable="true">
      <options>
        <option name="fixed">1</option>
      </options>
    </field>
    <field name="lastName" type="string" column="last_name" length="255" nullable="true">
      <options>
        <option name="fixed">1</option>
      </options>
    </field>
    <field name="country" type="string" column="country" length="255" nullable="true">
      <options>
        <option name="fixed">1</option>
      </options>
    </field>
    <field name="city" type="string" column="city" length="255" nullable="false">
      <options>
        <option name="fixed">1</option>
      </options>
    </field>
    <field name="organization" type="string" column="organization" length="255" nullable="true">
      <options>
        <option name="fixed">1</option>
      </options>
    </field>
    <field name="degree" type="string" column="degree" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="jobStatus" type="string" column="job_status" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="jobPosition" type="string" column="job_position" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="jobExperience" type="string" column="job_experience" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="gender" type="integer" column="gender" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="ldap" type="boolean" column="ldap" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="admin" type="boolean" column="admin" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="lecturer" type="boolean" column="lecturer" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="enabled" type="boolean" column="enabled" nullable="false">
      <options>
        <option name="default">1</option>
      </options>
    </field>
    <field name="createdAt" type="datetime" column="created_at" nullable="true" />
    <field name="updatedAt" type="datetime" column="updated_at" nullable="true" />
    <one-to-many target-entity="Video" mapped-by="owner" field="videos"/>
  </entity>
</doctrine-mapping>
