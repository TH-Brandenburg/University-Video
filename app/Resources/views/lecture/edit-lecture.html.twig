{% extends 'base.html.twig' %}
{% form_theme lectureDetailForm 'bootstrap_3_horizontal_layout.html.twig' %}
{% form_theme addVideoForm 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}Vorlesung bearbeiten{% endblock %}

{% block body %}

    <div class="row">
        <h1>Vorlesung bearbeiten</h1>
        <p>Hier k√∂nnen Sie die Vorlesung bearbeiten.</p>
        {{ form_start(lectureDetailForm) }}
        {% if not lectureDetailForm.vars.valid %}
            <div>{{ form_errors(lectureDetailForm) }}</div>
        {% endif %}
        {{ form_widget(lectureDetailForm) }}
        {{ form_end(lectureDetailForm) }}
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="list-group">
                {% for lectureVideoAssociation in orderedLectureVideos %}
                    <div class="list-group-item">
                        <span>
                            {{ loop.index }} - {{ lectureVideoAssociation.video.title }}
                        </span>
                        <div class="pull-right">
                            <a class="btn btn-xs btn-default{% if loop.first %} disabled{% endif %}"
                               href="{{ path('moveUpLectureVideo', {'id': lectureVideoAssociation.id}) }}">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="btn btn-xs btn-default{% if loop.last %} disabled{% endif %}"
                               href="{{ path('moveDownLectureVideo', {'id': lectureVideoAssociation.id}) }}">
                                <i class="fa fa-chevron-down"></i>
                            </a>
                            <a class="btn btn-xs btn-danger"
                               href="{{ path('removeLectureVideo', {'id': lectureVideoAssociation.id}) }}">
                                <i class="fa fa-remove"></i>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
            {{ form_start(addVideoForm) }}
            {% if not addVideoForm.vars.valid %}
                <div>{{ form_errors(addVideoForm) }}</div>
            {% endif %}
            {{ form_widget(addVideoForm) }}
            {{ form_end(addVideoForm) }}
        </div>
    </div>

{% endblock %}