{% extends 'base.html.twig' %}

{% block title %}Kurse{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12 col-sm-6">
            <h2>Kurse</h2>
        </div>
        <div class="col-xs-12 col-sm-6">
            {% if is_granted('ROLE_LECTURER') %}
                <a class="btn btn-default pull-right" href="{{ path('createCourse') }}">
                    <i class="fa fa-list"></i> Kurs anlegen
                </a>
            {% endif %}
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="list-group">
                {% for course in courses %}
                <a href="{{ path('showCourse', {'id' : course.id }) }}" class="list-group-item">{{ course.label }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}