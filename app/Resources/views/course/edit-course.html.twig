{% extends 'base.html.twig' %}
{% form_theme courseDetailForm 'bootstrap_3_horizontal_layout.html.twig' %}
{% form_theme addLectureForm 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}Kurs bearbeiten{% endblock %}

{% block body %}

    <div class="row">
        <h1>Kurs bearbeiten</h1>
        <p>Hier k√∂nnen Sie die Kurse bearbeiten.</p>
        {{ form_start(courseDetailForm) }}
        {% if not courseDetailForm.vars.valid %}
            <div>{{ form_errors(courseDetailForm) }}</div>
        {% endif %}
        {{ form_widget(courseDetailForm) }}
        {{ form_end(courseDetailForm) }}
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="list-group">
                {% for courseLectureAssociation in orderedCourseLectures %}
                    <div class="list-group-item">
                        <span>
                            {{ loop.index }} - {{ courseLectureAssociation.lecture.label }}
                        </span>
                        <div class="pull-right">
                            <a class="btn btn-xs btn-default{% if loop.first %} disabled{% endif %}"
                               href="{{ path('moveUpCourseLecture', {'id': courseLectureAssociation.id}) }}">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="btn btn-xs btn-default{% if loop.last %} disabled{% endif %}"
                               href="{{ path('moveDownCourseLecture', {'id': courseLectureAssociation.id}) }}">
                                <i class="fa fa-chevron-down"></i>
                            </a>
                            <a class="btn btn-xs btn-danger" href="#"><i class="fa fa-remove"></i></a>
                        </div>
                    </div>
                {% endfor %}
            </div>
            {{ form_start(addLectureForm) }}
            {% if not addLectureForm.vars.valid %}
                <div>{{ form_errors(addLectureForm) }}</div>
            {% endif %}
            {{ form_widget(addLectureForm) }}
            {{ form_end(addLectureForm) }}
        </div>
    </div>

{% endblock %}