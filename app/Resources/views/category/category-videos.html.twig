{% extends 'base.html.twig' %}

{% block title %}Videos in Kategorie{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <h2>Videos in Kategorie "{{ category.label }}"</h2>
        </div>
    </div>
    <div class="row">
        {% for video in videos %}
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a href="{{ path('videoPlayer', { id: video.id }) }}">{{ video.title }}</a>
                    </div>
                    <div class="panel-body">
                        {{ video.description }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}