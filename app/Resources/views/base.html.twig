<!DOCTYPE html>
<html>
    <head>

        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>{% block title %}Default{% endblock %} :: WeaVid</title>

        <!-- Bootstrap Core CSS -->
        <link rel="stylesheet" href="{{ app.request.getSchemeAndHttpHost() }}/assets/vendor/bootstrap/dist/css/bootstrap.min.css" type="text/css">
        <link rel="stylesheet" href="{{ app.request.getSchemeAndHttpHost() }}/assets/vendor/bootswatch/flatly/bootstrap.min.css" type="text/css">

        <!-- Fonts -->
        <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
        <link href='https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
        <link href="{{ app.request.getSchemeAndHttpHost() }}/assets/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

        <!-- Animate -->
        <link rel="stylesheet" href="{{ app.request.getSchemeAndHttpHost() }}/assets/vendor/animate.css/animate.min.css">

        <!--[if lt IE 9]>
        <script type="text/javascript" src="{{ app.request.getSchemeAndHttpHost() }}/assets/vendor/html5shiv/dist/html5shiv.js"></script>
        <script type="text/javascript" src="{{ app.request.getSchemeAndHttpHost() }}/assets/vendor/respond/dest/respond.src.js"></script>
        <![endif]-->

        <!-- Custom CSS -->
        <link rel="stylesheet" href="{{ app.request.getSchemeAndHttpHost() }}/assets/css/custom.css">
        {% block stylesheets %}{% endblock %}

        <!-- Favicon -->
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    </head>
    <body>

        {% include "navbar.html.twig" %}

        <div class="container">
            {% block body %}{% endblock %}
        </div>

        <!-- jQuery -->
        <script src="{{ app.request.getSchemeAndHttpHost() }}/assets/vendor/jquery/dist/jquery.min.js"></script>

        <!-- Bootstrap Core JavaScript -->
        <script src="{{ app.request.getSchemeAndHttpHost() }}/assets/vendor/bootstrap/dist/js/bootstrap.min.js"></script>

        {% block javascripts %}{% endblock %}
    </body>
</html>
