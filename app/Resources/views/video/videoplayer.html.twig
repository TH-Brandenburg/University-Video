{% extends 'base.html.twig' %}
{% form_theme commentForm 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}Videos{% endblock %}

{% block body %}

    <h2></h2>
    <div class="row">
        <div class="col-xs-12">
            <video-player id="weavidplayer" quality="hd" duration="{{ primaryVideo.body.duration }}">

                <video-stream
                    sd_src="{{ primaryVideo.body.files.sd.link_secure }}"
                    hd_src="{{ primaryVideo.body.files.hd.link_secure }}"
                    poster="{{ (primaryVideo.body.pictures.sizes|last).link }}">
                </video-stream>

                <video-stream
                        sd_src="{{ secondaryVideo.body.files.sd.link_secure }}"
                        hd_src="{{ secondaryVideo.body.files.hd.link_secure }}"
                        poster="{{ (secondaryVideo.body.pictures.sizes|last).link }}">
                </video-stream>

            </video-player>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-8">
            <div class="row">
                <div class="col-xs-12">
                    <div class="well">
                        <strong>{{ video.title }}</strong>
                        <p>
                            {{ video.description }}
                        </p>
                        <p>
                            <small>
                                erstellt am {{ video.createdAt|date('d.m.Y') }}
                                von {{ video.owner.firstName }} {{ video.owner.lastName }}
                            </small>
                        </p>
                        <a class="btn btn-default btn-xs" href="{{ path('videoEdit', {'id': video.id }) }}">
                            Bearbeiten
                        </a>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    {% for comment in video.comment if comment.approved and not comment.deleted %}
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <strong>{{ comment.creator.firstName }} {{ comment.creator.lastName }}</strong>
                                am {{ comment.createdAt|date('d.m.Y H:i') }}
                        </div>
                        <div class="panel-body">
                            {{ comment.text }}
                        </div>
                    </div>
                    {% endfor %}
                    {{ form_start(commentForm) }}
                    {% if not commentForm.vars.valid %}
                        <div>{{ form_errors(commentForm) }}</div>
                    {% endif %}
                    {{ form_widget(commentForm) }}
                    {{ form_end(commentForm) }}
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-sm-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Playlisten mit diesem Video
                </div>
                <div class="panel-body">
                    <ul class="list-group">
                    {% for playlist in video.playlist if playlist.isOwner(app.user) or playlist.private == 0 %}
                        <a class="list-group-item"
                           href="{{ path('showPlaylist', {'id': playlist.id}) }}">{{ playlist.name }}</a>
                    {% endfor %}
                    </ul>
                </div>
            </div>
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ app.request.getSchemeAndHttpHost() }}/assets/vendor/webcomponentsjs/webcomponents-lite.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $form = $('form[name="comment"]');
            $form.submit(function(e){
                e.preventDefault();

                $.ajax({
                    type: $form.attr('method'),
                    url: $form.attr('action'),
                    data: $form.serializeArray(),
                    success: function(data){
                        callback(data);
                    }
                });

                return false;
            })
        });
    </script>
{% endblock %}

{% block stylesheets %}
    <link rel="import" href="{{ app.request.getSchemeAndHttpHost() }}/assets/vendor/video-player/video-player.html">
    <style type="text/css">
        video-player {
            width: 100%;
        }
    </style>
{% endblock %}